{
  "name": "fullstack-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:web": "vite",
    "build:web": "tsc && vite build",
    "preview:web": "vite preview",
    "build:api": "npx swc ./src/api -d dist",
    "dev:api": "concurrently \"npm run build:api -- -w\" \"nodemon --watch \"dist/api/**/*\" -e js ./dist/api/server.js\"",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\""
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.61",
    "@swc/core": "^1.3.32",
    "@types/express": "^4.17.17",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0"
  }
}
